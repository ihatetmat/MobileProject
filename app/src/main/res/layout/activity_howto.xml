<?xml version="1.0" encoding="utf-8"?>
<!-- 종민 -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/howToLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_background"
    tools:context=".activity.HowToActivity">
    <FrameLayout
        android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/game_background">
        <!-- 게임 배경 -->
        <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/game_background" />
        <!-- 게임 캐릭터 -->
        <ImageView
        android:id="@+id/character"
        android:layout_width="83dp"
        android:layout_height="85dp"
        android:layout_gravity="bottom|start"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/character_image" />
        <!-- 점프 버튼 -->
        <Button
        android:id="@+id/jumpButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FF6200EE"
        android:text="Jump"
        android:textColor="#FFFFFF" />
        <!-- 점프 버튼 설명 -->
        <TextView
        android:id="@+id/jumpDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="70dp"
        android:text="점프 버튼"
        android:textColor="#000000"
        android:textSize="14sp" />
        <!-- 슬라이드 버튼 -->
        <Button
        android:id="@+id/slideButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="130dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FF6200EE"
        android:text="Slide"
        android:textColor="#FFFFFF" />
        <!-- 슬라이드 버튼 설명 -->
        <TextView
        android:id="@+id/slideDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="70dp"
        android:text="슬라이딩 기능"
        android:textColor="#000000"
        android:textSize="14sp" />
        <!-- 설정 버튼 -->
        <Button
        android:id="@+id/pauseButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:backgroundTint="#FF6200EE"
        android:text="Pause"
        android:textColor="#FFFFFF" />
        <!-- 일시정지 버튼 설명 -->
        <TextView
            android:id="@+id/pauseDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="16dp"
            android:text="일시정지버튼"
            android:textColor="#000000"
            android:textSize="14sp" />
        <!-- 이전 화면으로 돌아가는 버튼 -->
        <Button
            android:id="@+id/returnButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="top|start"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FF6200EE"
            android:text="return"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
